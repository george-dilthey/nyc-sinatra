<h2>Edit Historical Figure</h2>

<form action="/figures/<%=@figure.id%>" method="POST">
    <input type="hidden" name="_method" value="PATCH">
    <label for="name">Name:</label><br>
    <input type="text" id="figure_name" name="figure[name]" value="<%=@figure.name%>" ><br>

    <h3>Titles</h3>

    <%@titles.each do |title|%>
    <input type="checkbox" name="figure[title_ids][]" id="title_<%=title.id%>" value = "<%=title.id%>" <%='checked' if @figure.titles.include?(title)%>><%=title.name%><br>
    <%end%>
    <p>Create new title:</p>
    <input type="text" id="new_title" name="title[name]"><br>

    <h3>Landmarks</h3>

    <%@landmarks.each do |landmark|%>
    <input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%=landmark.id%>" value = "<%=landmark.id%>" <%='checked' if @figure.landmarks.include?(landmark)%>><%=landmark.name%><br>
    <%end%>

    <p>Create new landmark:</p>
    <input type="text" id="new_landmark" name="landmark[name]"><br><br>
    
    <input type="submit" value="Edit Figure">
</form><br>

<a class="button" href="/figures">Figures</a>
<a class="button" href="/">Home</a>
